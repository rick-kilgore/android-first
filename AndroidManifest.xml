<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.rkilgore.firstapp"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="11"/>
    <application android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:theme="@style/RickTheme">
        <activity android:name="net.rkilgore.firstapp.MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="net.rkilgore.firstapp.DisplayMessageActivity"
                  android:label="@string/title_activity_display_message"
                  android:parentActivityName="net.rkilgore.firstapp.MainActivity">
                <meta-data android:name="android.support.PARENT_ACTIVITY"
                           android:value="net.rkilgore.firstapp.MainActivity"/>
        </activity>
    </application>
</manifest>
